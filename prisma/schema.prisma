generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Employee {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  attendances Attendance[]
}

model Attendance {
  id             Int      @id @default(autoincrement())
  employeeId     Int
  date           String
  inTime         String?
  outTime        String?
  workedHours    Float
  expectedHours  Float
  isLeave        Boolean

  employee Employee @relation(fields: [employeeId], references: [id])
}
